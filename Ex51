let count = 0;

function cc(card) {
  switch(card){
    case 2: count+=1;break;
    case 3:count+=1;break;
    case 4:count+=1;break;
    case 5:count+=1;break;
    case 6: count+=1;break;
    case 7: count; break;
    case 8:count; break;
    case 9: count; break;
    default:  count-=1; break;
  }
  if(count>0){
    return count + " Bet";
  }
  else {
    return count + " Hold";
  }
  }

cc(2); cc(3); cc(7); cc('K'); cc('A');
